# Polymath v3 Environment Configuration
# Copy to .env and fill in values

# =============================================================================
# Database Connections
# =============================================================================

# Postgres with pgvector
POSTGRES_DSN=dbname=polymath_v3 user=polymath host=/var/run/postgresql
# Or with password: postgresql://polymath:password@localhost:5432/polymath_v3

# Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=

# =============================================================================
# Embedding Models
# =============================================================================

# BGE-M3 is default (1024-dim)
EMBEDDING_MODEL=BAAI/bge-m3
EMBEDDING_DIM=1024

# Reranker model
RERANKER_MODEL=BAAI/bge-reranker-v2-m3

# =============================================================================
# Google Cloud Platform
# =============================================================================

GCP_PROJECT_ID=
GCP_SERVICE_ACCOUNT=/path/to/service-account.json
GCP_BUCKET=polymath-batch-jobs

# Gemini API (for concept extraction)
GEMINI_API_KEY=

# =============================================================================
# External APIs (Optional)
# =============================================================================

# For metadata enrichment
OPENALEX_EMAIL=your-email@example.com

# For web search in gap detection
BRAVE_API_KEY=

# =============================================================================
# Paths
# =============================================================================

# PDF archive location
PDF_ARCHIVE_PATH=/scratch/polymath_archive/

# Zotero metadata CSVs
ZOTERO_CSV_PATH=/home/user/work/polymax/reports/zotero_full_enrichment_20260112_1530.csv

# Staging directory for new PDFs
STAGING_DIR=/home/user/polymath-v3/ingest_staging/

# =============================================================================
# Processing
# =============================================================================

# Batch processing
BATCH_SIZE=100
NUM_WORKERS=8

# Logging
LOG_LEVEL=INFO
